{
  "version": 2,
  "builds": [
    {
      "src": "BACKEND/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "FRONTEND/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/BACKEND/server.js"
    },
    {
      "source": "/((?!api/|_next/|static/|assets/|favicon.ico|sw.js).*)",
      "destination": "/index.html"
    }
  ]
}