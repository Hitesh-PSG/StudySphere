{
  "version": 2,
  "builds": [
    {
      "src": "BACKEND/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "FRONTEND/package.json",
      "use": "@vercel/vite"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "BACKEND/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
